<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:shareInterpolator="@android:interpolator/fast_out_slow_in"
    android:duration="350"
    tools:ignore="NewApi">

    <alpha
        android:fromAlpha="0"
        android:toAlpha="1" />

    <scale
        android:pivotX="100%"
        android:pivotY="0"
        android:fromXScale="0.9"
        android:fromYScale="0.9"
        android:toXScale="1"
        android:toYScale="1" />

</set>