<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_main_hourly_trend_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraLarge"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/hourly_block_title_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:importantForAccessibility="no"
            android:layout_marginStart="@dimen/large_margin"
            android:backgroundTint="?attr/colorSurfaceInverse"
            android:src="@drawable/ic_schedule"
            app:layout_constraintBottom_toBottomOf="@+id/hourly_block_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/hourly_block_title" />

        <TextView
            android:id="@+id/hourly_block_title"
            android:accessibilityHeading="true"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="?attr/colorSurfaceInverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_margin"
            android:text="@string/hourly_forecast"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/hourly_block_title_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/hourly_block_subtitle"
            android:layout_marginTop="2dp"
            android:paddingEnd="@dimen/large_margin"
            style="@style/content_text"
            tools:text="Rain Wednesday evening"
            app:layout_constraintTop_toBottomOf="@+id/hourly_block_title"
            app:layout_constraintStart_toStartOf="@+id/hourly_block_title_icon" />

        <com.google.android.material.button.MaterialButtonGroup
            android:id="@+id/hourly_block_button_group"
            style="@style/Widget.Material3Expressive.MaterialButtonGroup.Connected"
            app:overflowMode="menu"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/hourly_block_subtitle"
            app:layout_constraintStart_toStartOf="@+id/hourly_block_title_icon" />

        <org.breezyweather.ui.common.widgets.trend.TrendRecyclerView
            android:id="@+id/hourly_block_trendRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hourly_trend_item_height"
            android:layout_marginTop="@dimen/small_margin"
            tools:ignore="UnusedAttribute"
            app:layout_constraintTop_toBottomOf="@+id/hourly_block_button_group"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
