<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_details_uv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/container_details_uv_icon"
        android:src="@drawable/ic_sun"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        style="@style/material_icon"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <TextView
        android:id="@+id/container_details_uv_title"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/container_details_uv_icon"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginRight="@dimen/normal_margin"
        android:textSize="@dimen/title_text_size"
        style="@style/content_text"
        tools:text="紫外线-中等"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/container_details_uv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/container_details_uv_icon"
        android:layout_below="@id/container_details_uv_title"
        android:layout_marginTop="2dp"
        android:layout_marginRight="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/normal_margin"
        android:textColor="@color/colorTextGrey"
        android:lineSpacingMultiplier="1.3"
        style="@style/content_text"
        tools:text="属中等强度紫外线辐射天气，外出时建议涂擦SPF高于15、PA+的防晒护肤品，戴帽子、太阳镜。"
        tools:ignore="RtlHardcoded" />

</RelativeLayout>