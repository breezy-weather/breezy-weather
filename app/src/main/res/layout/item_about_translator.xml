<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_about_translator"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorRoot"
    android:stateListAnimator="@animator/touch_raise"
    android:foreground="@drawable/selectable_item_background"
    tools:targetApi="lollipop">

    <TextView
        android:id="@+id/item_about_translator_title"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginStart="@dimen/normal_margin"
        android:layout_marginBottom="2dp"
        android:maxLines="1"
        android:textStyle="bold"
        android:textColor="@color/colorTextContent"
        style="@style/title_text"
        tools:text="Mehmet Saygin Yilmaz"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/item_about_translator_subtitle"
        android:layout_alignParentStart="true"
        android:layout_below="@id/item_about_translator_title"
        android:layout_marginBottom="@dimen/normal_margin"
        android:layout_marginStart="@dimen/normal_margin"
        android:maxLines="1"
        style="@style/subtitle_text"
        tools:text="memcos@gmail.com"
        tools:ignore="RtlHardcoded" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_about_translator_flag"
        android:layout_alignTop="@id/item_about_translator_title"
        android:layout_toEndOf="@id/item_about_translator_title"
        android:layout_above="@id/item_about_translator_subtitle"
        android:layout_marginStart="@dimen/little_margin"
        android:layout_marginBottom="2dp"
        android:layout_width="18dp"
        android:layout_height="match_parent"
        tools:src="@drawable/flag_tr"
        tools:ignore="ContentDescription,RtlHardcoded" />

</RelativeLayout>