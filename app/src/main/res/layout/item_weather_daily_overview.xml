<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:foreground="@drawable/selectable_item_background_borderless"
    tools:ignore="UnusedAttribute">

    <org.breezyweather.common.ui.widgets.AnimatableIconView
        android:id="@+id/item_weather_daily_overview_icon"
        android:layout_width="@dimen/little_weather_icon_container_size"
        android:layout_height="@dimen/little_weather_icon_container_size"
        app:inner_margins="@dimen/normal_margin"
        tools:background="@drawable/weather_clear_day"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/item_weather_daily_overview_text"
        android:layout_marginEnd="@dimen/normal_margin"
        android:gravity="start"
        android:textAlignment="gravity"
        android:textStyle="bold"
        style="@style/title_text"
        tools:text="Mostly cloudy, 2 Â°C"
        tools:ignore="RtlHardcoded" />

</LinearLayout>