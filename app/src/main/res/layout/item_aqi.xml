<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_aqi"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:paddingStart="@dimen/large_margin"
    android:paddingEnd="@dimen/large_margin">

    <TextView
        android:id="@+id/item_aqi_title"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/content_text_size"
        style="@style/title_text"
        tools:text="PM 2.5" />

    <org.breezyweather.ui.common.widgets.RoundProgress
        android:id="@+id/item_aqi_progress"
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <TextView
        android:id="@+id/item_aqi_content"
        android:layout_gravity="end"
        android:maxLines="1"
        android:ellipsize="end"
        style="@style/content_text"
        tools:text="126 μg/m³" />

    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/item_aqi_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
