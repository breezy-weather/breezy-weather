<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_animatable_icon_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/selectable_item_background"
    tools:ignore="UnusedAttribute">

    <org.breezyweather.ui.common.widgets.AnimatableIconView
        android:id="@+id/dialog_animatable_icon_icon"
        android:layout_width="@dimen/current_weather_icon_container_size"
        android:layout_height="@dimen/current_weather_icon_container_size"
        android:layout_margin="@dimen/normal_margin"
        android:layout_gravity="center"
        app:inner_margins="@dimen/normal_margin"
        tools:background="@drawable/weather_clear_day"/>

</FrameLayout>