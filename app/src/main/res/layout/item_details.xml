<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_details_icon"
        android:src="@drawable/ic_forecast"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        style="@style/material_icon"
        app:tint="?attr/colorTitleText"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <TextView
        android:id="@+id/item_details_title"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/item_details_icon"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginEnd="@dimen/normal_margin"
        android:gravity="start"
        android:textAlignment="gravity"
        style="@style/title_text"
        tools:text="North wind (real-time South wind)"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/item_details_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_details_icon"
        android:layout_below="@id/item_details_title"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/normal_margin"
        android:textColor="@color/colorTextSubtitle"
        android:gravity="start"
        android:textAlignment="gravity"
        style="@style/content_text"
        tools:text="Level 3-4 (real-time level 3)"
        tools:ignore="RtlHardcoded" />

</RelativeLayout>